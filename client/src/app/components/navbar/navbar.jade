nav.navbar.navbar-default
  .container
    // Brand and toggle get grouped for better mobile display
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ng-href="/") DoorAPI
    // Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav
        li
          a(ui-sref="employees" ng-show="currentUser.admin") Employees
        
      ul.nav.navbar-nav.navbar-right
        li(ng-show="!currentUser")
          a(ng-href="/sign_in") Sign In
          
        li.dropdown(dropdown='' ng-show="currentUser")
          a.dropdown-toggle(dropdown-toggle='' data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
            | {{ currentUser.name }} &nbsp;
            span.caret
          ul.dropdown-menu(role="menu" )
            li
              a(href='#') My Account
            li.divider(role='separator')
            li
              a(ng-href="/" ui-sref="sign_out") Sign Out
